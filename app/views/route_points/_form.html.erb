<%= simple_form_for(@route_point, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :seqnum %>
    <%= f.input :lat %>
    <%= f.input :lon %>
    <%= f.input :route %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
