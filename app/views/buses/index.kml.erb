xml.kml("xmlns" => KML_NS) do
	xml.tag! "Document" do
	  xml.tag! "Style", :id => "myStyle" do
	    xml.tag! "PointStyle" do
	      xml.color "ffff0000"
	      xml.outline 0
	    end
	 end
	 @buses.each do |bus|
	 xml.tag! "Placemark" do 
	   xml.description "(description from bus)"
	   xml.name "(name from bus)"
	   xml.styleUrl "#myStyle"
	   xml << bus.geom.as_kml
	 end
	 end
	 end
end