  <html>
    <head>
      <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
      <style type="text/css">
        html { height: 100% }
        body { height: 100%; margin: 0cm; padding-top: 1cm }
        #map_canvas { height: 100% }
      </style>
      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js">
      </script>
      <script type="text/javascript" src="buslocations.json" ></script>
      <!--script type="text/javascript" src="busroute32.json" ></script-->
      <script type="text/javascript"
        src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAAQDOZpCb33qnlU5xcBmf_n8CQ4p_qg6s&sensor=true">
      </script>
    <!-- end of javascript headers -->
    </head>
  
    <!-- navbar-->
    <div class="navbar navbar-inverse navbar-static-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <style type="text/css">
              body { padding-top: 0cm }
            </style>
          </a>
          <%= link_to "Bus Tracker", root_path, :class => "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              
                <li class="btn-group" data-toggle="buttons-radio">
                  <li><%= link_to_function "Buses", "startPollingBuses()", class: "btn btn-inverse " %>  </li>
                  <li><%= link_to_function "Stops", "startPollingStops()", class: "btn btn-inverse" %></li>
                  <li><%= link_to "Show All", "#", id: "show_all", class: "btn btn-inverse" %></li>
                  <li><a data-toggle="modal" href="#About" class="btn btn-inverse">About</a></li>
                </li>                                
              </ul>
            
            <table cellpadding="5" class="navbar-text pull-right"><tr>
              <td><p id="menu_status_area">Showing all routes</p></td>
              <td><p id="navbar_right">(idle)</p></td>
          </tr></table>
          </div>
        </div>
      </div> <!-- navbar-inner -->
    </div> <!-- navbar-inverse -->
  <body>  
    <%= yield %>
  </body>
