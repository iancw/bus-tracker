  <![endif]-->

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- javascript and headers for the map -->
  <!DOCTYPE html>
  <html>
    <head>
      <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
      <style type="text/css">
        html { height: 100% }
        body { height: 100%; margin: 0cm; padding-top: 1cm }
        #map_canvas { height: 100% }
      </style>
      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js">
      </script>
      <script type="text/javascript" src="buslocations.json" ></script>
      <!--script type="text/javascript" src="busroute32.json" ></script-->
      <script type="text/javascript"
        src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAAQDOZpCb33qnlU5xcBmf_n8CQ4p_qg6s&sensor=true">
      </script>
    <!-- end of javascript headers -->
    </head>
  
    <!-- navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <style type="text/css">
              body { padding-top: 0cm }
            </style>
          </a>
          <%= link_to "Bus Tracker", "#", :class => "brand" %>
          <div class="nav-collapse">
            <ul class="nav">
              <li><%= link_to_function "Buses", "startPollingBuses()" %></li>
              <li><%= link_to_function "Stops", "startPollingStops()" %></li>
              <li><a href="#about">About</a></li>
              <!-- <li id="right_menu_bar"><a href="#all">All</a></li> -->
            </ul>
            <!-- <p class="navbar-text pull-left" id="menu_status_area">Showing all routes</p> -->
            <p class="navbar-text pull-right" id="navbar_right">(idle)</p>
          </div>
        </div>
      </div> <!-- navbar-inner -->
    </div> <!-- navbar-inverse -->
    

    <div id="map_canvas" style="width:100%; height:100%"></div>


  <body>  
    <%= yield %>
  </body>
</html>
